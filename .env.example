# Google Apps Script 환경 변수 템플릿
# 이 파일은 예시입니다. 실제 값으로 변경하여 스크립트 속성에 설정하세요.

# 🔑 API 설정
GEMINI_API_KEY=your_gemini_api_key_here
# Google AI Studio에서 발급받은 Gemini API 키
# 예: AIzaSyC-xxxxxxxxxxxxxxxxxxxxxxxx

# 📧 이메일 설정  
EMAIL_RECIPIENTS=user@example.com,admin@company.com
# PDF 처리 결과를 받을 이메일 주소들 (쉼표로 구분)

EMAIL_SUBJECT=PDF処理結果報告
# 이메일 제목 (선택사항)

ADMIN_EMAIL=admin@company.com  
# 관리자 이메일 (선택사항, 오류 보고용)

# ⚙️ 시스템 설정 (선택사항)
EMAIL_MODE=consolidated
# 이메일 전송 모드: consolidated, individual, errors_only

EXECUTION_MAX_TIME_MINUTES=4
# 최대 실행 시간 (분)

BATCH_SIZE=3
# 배치 처리 크기

TRIGGER_INTERVAL_MINUTES=5  
# 자동 실행 간격 (분)

MAX_TEXT_LENGTH=8000
# API 전송 최대 텍스트 길이

SUMMARY_MAX_LENGTH=150
# 요약문 최대 길이

# 🚨 주의사항:
# 1. 이 파일(.env.example)은 예시이므로 실제 키를 입력하지 마세요
# 2. 실제 설정은 Google Apps Script의 스크립트 속성에 저장하세요  
# 3. 민감한 정보가 포함된 파일은 절대 GitHub에 커밋하지 마세요
# 4. API 키는 정기적으로 교체하세요