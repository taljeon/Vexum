# 水路通報自動配信システム - 환경 설정 템플릿
# ==========================================
# 이 파일을 복사해서 .env 파일을 만들고 실제 값을 입력하세요
# 보안상 .env 파일은 Git에 커밋되지 않습니다

# 기본 설정
TZ=Asia/Tokyo
LOG_LEVEL=INFO

# 운용 모드
# true: dry-run（테스트 실행, 실제 배신 없음）
# false: 본번 배신（실제로 메일・Slack 배신）
DRY_RUN=true

# 데이터베이스 설정
DB_PATH=./data/waterway_notices.db
BACKUP_PATH=./data/backups

# RSS 취득 설정
RSS_FETCH_TIMEOUT=30
MAX_RETRY_COUNT=3

# 메일 배신 설정（SMTP）
# ⚠️ 실제 값으로 변경하세요! ⚠️
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=YOUR_ACTUAL_EMAIL@gmail.com
SMTP_PASSWORD=YOUR_16_DIGIT_APP_PASSWORD
SMTP_FROM_NAME=水路通報配信システム
SMTP_FROM_EMAIL=YOUR_ACTUAL_EMAIL@gmail.com

# Slack 배신 설정
# ⚠️ 실제 Webhook URL로 변경하세요! ⚠️
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#waterway-notices
SLACK_USERNAME=水路通報Bot
SLACK_ICON_EMOJI=:ocean:

# 지역 설정
# 대상 지역: tokyo,yokohama,nagoya,osaka,kobe,shimonoseki,sapporo,sendai,hiroshima,all
DEFAULT_REGIONS=all

# 스케줄 설정
DAILY_SCHEDULE_TIME=06:30
WEEKLY_SCHEDULE_DAY=friday
WEEKLY_SCHEDULE_TIME=09:30

# 성능 설정
MAX_CONCURRENT_REQUESTS=5
REQUEST_DELAY=1.0

# 보안 설정
# ⚠️ 안전한 토큰으로 변경하세요! ⚠️
ALLOWED_HOSTS=localhost,127.0.0.1,waterway-system
API_TOKEN=CHANGE_TO_SECURE_RANDOM_TOKEN

# 로그 로테이션 설정
MAX_LOG_FILES=30
LOG_FILE_SIZE_MB=10

# 중복 제거 설정
DUPLICATE_CHECK_DAYS=7
CONTENT_SIMILARITY_THRESHOLD=0.85